modules = ["python-3.11"]
[agent]
expertMode = true
integrations = ["python_openai_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "glibcLocales", "libiconv", "libxcrypt", "openssl", "pkg-config", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "admin_dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "demo_website_api"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "unified_dashboard"

[[workflows.workflow]]
name = "admin_dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run admin_dashboard.py --server.port=3000 --server.address=0.0.0.0"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "demo_website_api"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api.py"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "unified_dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run unified_dashboard.py --server.port=5000 --server.address=0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 36849
externalPort = 3003

[[ports]]
localPort = 39141
externalPort = 3002

[[ports]]
localPort = 43993
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port=5000", "--server.address=0.0.0.0", "--server.enableCORS", "false", "--server.enableXsrfChecks", "false"]
